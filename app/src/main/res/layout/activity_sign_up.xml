<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.demo_app.jitcodez.grandmintdemoapp.SignUpActivity">

    <EditText
        android:id="@+id/signup_emailId"
        android:hint="@string/emailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/signup_username"
        android:hint="@string/Username"
        android:layout_below="@+id/signup_emailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/signup_password"
        android:inputType="textPassword"
        android:hint="@string/Username"
        android:layout_below="@+id/signup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textAlignment="center"/>
<Button
    android:id="@+id/signupActivity_signUp_button"
    android:layout_below="@id/signup_password"
    android:text="Sign Up"
    android:theme="@style/ButtonTheme"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>